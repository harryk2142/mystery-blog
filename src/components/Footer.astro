---
import Matomo from "./Matomo.astro";
const today = new Date();
---

<footer>
  <div>
    <span>
      &copy; {today.getFullYear()} Kramer. All rights reserved.
    </span>
  </div>
</footer>
<Matomo />

<style>
  footer {
    background: linear-gradient(var(--gray-gradient)) no-repeat;
    color: rgb(var(--accent));
    display: flex;
    justify-content: center;
    align-items: center;
    height: 3rem;
    position: fixed;
    bottom: 0;
    width: 100%;
  }
</style>
