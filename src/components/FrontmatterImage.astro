---
import type { JSX } from "astro/jsx-runtime";

import type { CollectionEntry } from "astro:content";
type NativeImgAttributes = JSX.IntrinsicElements["img"];
type Props = {
  blogpost: CollectionEntry<"blog">;
} & NativeImgAttributes;
const { blogpost, ...imgAttrs } = Astro.props;
const src = blogpost.data.heroImage.url.replace(
  "/images/",
  "/src/assets/images/"
);
const alt = blogpost.data.heroImage.alt;
---

<img src={src} alt={alt} {...imgAttrs} />
